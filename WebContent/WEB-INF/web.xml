<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.4">
  <resource-ref>
    <description>MariaDb Datasource</description>
    <res-ref-name>jdbc/jweb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <display-name>JWeb</display-name>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>controller.Test</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Newsletter</servlet-name>
    <servlet-class>controller.Newsletter</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserAccount</servlet-name>
    <servlet-class>controller.UserAccount</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserAuth</servlet-name>
    <servlet-class>controller.UserAuth</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserRegister</servlet-name>
    <servlet-class>controller.UserRegister</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminPanel</servlet-name>
    <servlet-class>controller.AdminPanel</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>AdminNews</servlet-name>
  	<servlet-class>controller.AdminNews</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/Home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Newsletter</servlet-name>
    <url-pattern>/Newsletter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserAccount</servlet-name>
    <url-pattern>/User/Account</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserAuth</servlet-name>
    <url-pattern>/User/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserRegister</servlet-name>
    <url-pattern>/User/Register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminPanel</servlet-name>
    <url-pattern>/Admin/Home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AdminNews</servlet-name>
  	<url-pattern>/Admin/News/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>filter.UserFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>filter.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/User/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/Admin/*</url-pattern>
  </filter-mapping>
</web-app>