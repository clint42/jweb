<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4">
  <resource-ref>
  	<description>MariaDb Datasource</description>
  	<res-ref-name>jdbc/jweb</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  <display-name>JWeb</display-name>
  <servlet>
    <servlet-name>Test</servlet-name>
    <servlet-class>controller.Test</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UserAuth</servlet-name>
  	<servlet-class>controller.UserAuth</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UserAuth</servlet-name>
  	<url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/Test</url-pattern>
  </servlet-mapping>
  <filter>
  	<filter-name>UserFilter</filter-name>
  	<filter-class>filter.UserFilter</filter-class>
  	<init-param>
  		<param-name>LogFileName</param-name>
  		<param-value>UserLog.txt</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>UserFilter</filter-name>
  	<url-pattern>/User/*</url-pattern>
  </filter-mapping>
</web-app>